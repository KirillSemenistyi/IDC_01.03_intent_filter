<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="1080px"
            android:layout_height="2400px" tools:layout_editor_absoluteY="1dp" tools:layout_editor_absoluteX="1dp">
        <EditText
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/search_field"/>
        <Button
                android:text="Format text"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/format_button"/>
        <Button
                android:text="Search"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/search_button"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="420dp" android:id="@+id/camera_result"/>
        <Button
                android:text="Take a picture"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/camera_button"/>
        <Button
                android:text="Enable bluetooth"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/bluetooth_button"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>